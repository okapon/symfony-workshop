{% extends 'MyBlogBundle::base.html.twig' %}

{% block page_title '新規作成' %}

{% block content %}
<form action="{{ post.id ? path('blog_edit', {'id': post.id})
  : path('blog_new') }}" method="post" {{ form_enctype(form) }}>
  {{ form_widget(form) }}
  <button class="btn btn-primary">{% if post.id %}編集{% else %}作成{% endif %}</button>
</form>
{% endblock content %}
